# WordPress E2E Test Configuration
# Copy this file to .env and fill in your values

# WordPress base URL (local wp-env or production/staging site)
WP_BASE_URL=http://localhost:8888

# WordPress admin credentials
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=password

# Flapjack API credentials (for settings tests)
FLAPJACK_APP_ID=your_app_id
FLAPJACK_ADMIN_API_KEY=your_admin_api_key
FLAPJACK_SEARCH_API_KEY=your_search_only_api_key

# Test mode: "local" (wp-env) or "production" (remote site)
TEST_MODE=local
