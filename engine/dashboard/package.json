{
  "name": "flapjack-dashboard",
  "version": "1.0.0",
  "description": "Web UI for managing Flapjack search indices",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "update-server": "cargo build -p flapjack-server --release && cp target/release/flapjack dashboard/bin/flapjack-stable && echo 'âœ“ Server binary updated'",
    "server": "bash scripts/start-stable-server.sh",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test:unit": "vitest",
    "test:unit:run": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test": "playwright test --project=e2e-ui",
    "test:smoke": "playwright test --project=e2e-ui tests/e2e-ui/smoke/",
    "test:e2e-ui": "playwright test --project=e2e-ui",
    "test:e2e-ui:smoke": "playwright test --project=e2e-ui tests/e2e-ui/smoke/",
    "test:e2e-ui:full": "playwright test --project=e2e-ui tests/e2e-ui/full/",
    "test:e2e-api": "playwright test --project=e2e-api",
    "test:ui": "playwright test --project=e2e-ui --ui",
    "test:headed": "playwright test --project=e2e-ui --headed",
    "test:debug": "playwright test --project=e2e-ui --debug",
    "test:pages": "playwright test --project=e2e-ui",
    "test:integration": "playwright test --project=e2e-api",
    "test:report": "playwright show-report"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.25.0",
    "axios": "^1.6.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.0",
    "react-router-dom": "^6.22.0",
    "recharts": "^3.7.0",
    "tailwind-merge": "^2.2.1",
    "zod": "^3.22.4",
    "zustand": "^4.5.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "algoliasearch": "^5.0.0",
    "autoprefixer": "^10.4.18",
    "dotenv": "^17.2.3",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.35",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.4.2",
    "vite": "^5.4.2",
    "vitest": "^2.1.8"
